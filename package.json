{
  "name": "@kuzpot/monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "kuzpot is a private photo sharing platform",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pchmn/kuzpot.git"
  },
  "author": "pchmn",
  "license": "MIT",
  "homepage": "https://github.com/pchmn/kuzpot",
  "scripts": {
    "dev": "turbo dev --verbosity=3 --log-order=stream",
    "dev:mobile": "pnpm --filter @kuzpot/mobile run dev:client",
    "build:mobile": "turbo build --filter @kuzpot/mobile",
    "build:functions": "turbo build --filter @kuzpot/functions",
    "test:functions": "pnpm --filter @kuzpot/functions run test",
    "test:functions:coverage": "turbo run test:coverage --filter @kuzpot/functions",
    "deploy:functions:dev": "turbo deploy:dev --filter @kuzpot/functions",
    "deploy:functions:prod": "turbo deploy:prod --filter @kuzpot/functions",
    "nhost:start": "pnpm proxy:start | nhost up",
    "nhost:stop": "nhost down",
    "prepare": "husky install && rm -rf .git/hooks || true && ln -s ../.husky .git/hooks || true",
    "lint": "eslint --cache --fix .",
    "clean": "npkill",
    "list-mismatches": "syncpack list-mismatches --types dev,prod,peer",
    "fix-mismatches": "syncpack fix-mismatches --types dev,prod,peer"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.3",
    "@commitlint/config-conventional": "^17.0.3",
    "@commitlint/prompt-cli": "^17.0.3",
    "dotenv-cli": "^7.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^11.2.3",
    "syncpack": "^10.7.3",
    "turbo": "^1.10.12"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/*",
        "expo-modules-*",
        "react-native-vector-icons*",
        "@firebase/app-types*"
      ]
    }
  }
}
