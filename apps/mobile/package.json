{
  "name": "@kavout/mobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "expo start",
    "dev:client": "expo start --dev-client",
    "prebuild": "expo prebuild --skip-dependency-update react-native,react",
    "prebuild:clean": "pnpm run prebuild --clean",
    "prebuild:android": "pnpm run prebuild:clean --platform android",
    "prebuild:ios": "pnpm run prebuild:clean --platform ios",
    "build": "expo export --output-dir ./build --platform all",
    "android": "expo run:android",
    "android:keystore": "keytool -list -v -keystore ./android/app/debug.keystore -alias androiddebugkey -storepass android -keypass android",
    "ios": "expo run:ios --device",
    "web": "expo start --web",
    "eas-build-pre-install": "npm install --global pnpm@7.x",
    "eas-build-local": "./eas-build-local.sh",
    "start": "expo start --dev-client",
    "lint": "eslint --cache --fix ."
  },
  "dependencies": {
    "@expo/config-plugins": "6.0.1",
    "@kavout/core": "workspace:*",
    "@kavout/react-native": "workspace:*",
    "@react-native-firebase/app": "^17.3.0",
    "@react-native-firebase/auth": "^17.3.0",
    "@react-native-firebase/firestore": "^17.3.0",
    "@react-native-firebase/functions": "^17.3.0",
    "@react-native-firebase/installations": "^17.3.0",
    "@react-native-firebase/messaging": "^17.3.0",
    "@react-navigation/native": "^6.1.1",
    "@react-navigation/native-stack": "^6.9.7",
    "@sentry/react-native": "4.9.0",
    "@tanstack/react-query": "^4.22.0",
    "expo": "~48.0.5",
    "expo-application": "~5.1.1",
    "expo-constants": "~14.2.1",
    "expo-dev-client": "~2.1.2",
    "expo-device": "~5.2.1",
    "expo-linking": "~4.0.1",
    "expo-location": "~15.1.1",
    "expo-navigation-bar": "~2.1.1",
    "expo-notifications": "~0.18.1",
    "expo-secure-store": "~12.1.1",
    "expo-splash-screen": "~0.18.1",
    "expo-status-bar": "~1.4.4",
    "expo-updates": "^0.16.3",
    "geofire-common": "^6.0.0",
    "i18next": "^22.4.8",
    "intl-pluralrules": "^1.3.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-i18next": "^12.1.4",
    "react-native": "0.71.3",
    "react-native-animated-pagination-dots": "^0.1.73",
    "react-native-maps": "1.3.2",
    "react-native-pager-view": "6.1.2",
    "react-native-paper": "^5.1.2",
    "react-native-safe-area-context": "4.5.0",
    "react-native-screens": "~3.20.0",
    "react-native-svg": "13.4.0",
    "sentry-expo": "~6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@kavout/eslint-config": "workspace:*",
    "@types/react": "~18.0.28",
    "@types/react-native": "~0.70.6",
    "babel-preset-expo": "~9.3.0",
    "dotenv": "^16.0.3",
    "expo-build-properties": "~0.5.1",
    "typescript": "^4.9.4"
  },
  "private": true,
  "expo": {
    "autolinking": {
      "nativeModulesDir": "../../packages/expo-system-theme"
    }
  }
}
