{
  "name": "@kavout/mobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "expo start",
    "dev:client": "expo start --dev-client",
    "prebuild": "expo prebuild --skip-dependency-update react-native,react",
    "prebuild:clean": "pnpm run prebuild --clean",
    "prebuild:android": "pnpm run prebuild:clean --platform android",
    "prebuild:ios": "pnpm run prebuild:clean --platform ios",
    "build": "expo export --output-dir ./build --platform all",
    "android": "expo run:android",
    "android:keystore": "keytool -list -v -keystore ./android/app/debug.keystore -alias androiddebugkey -storepass android -keypass android",
    "ios": "expo run:ios --device",
    "web": "expo start --web",
    "eas-build-pre-install": "npm install --global pnpm@7.x",
    "eas-build-local": "./eas-build-local.sh",
    "start": "expo start --dev-client",
    "lint": "eslint --cache --fix ."
  },
  "dependencies": {
    "@expo/config-plugins": "^5.0.2",
    "@kavout/core": "workspace:*",
    "@kavout/react-native": "workspace:*",
    "@react-native-async-storage/async-storage": "~1.17.3",
    "@react-native-firebase/app": "^16.5.0",
    "@react-native-firebase/auth": "^16.5.0",
    "@react-native-firebase/firestore": "^16.5.0",
    "@react-native-firebase/functions": "^16.5.1",
    "@react-native-firebase/installations": "^16.5.2",
    "@react-native-firebase/messaging": "^16.5.2",
    "@react-navigation/native": "^6.1.1",
    "@react-navigation/native-stack": "^6.9.7",
    "@tanstack/react-query": "^4.22.0",
    "expo": "~47.0.12",
    "expo-build-properties": "~0.4.1",
    "expo-dev-client": "~2.0.1",
    "expo-device": "~5.0.0",
    "expo-linking": "~3.3.0",
    "expo-localization": "~14.0.0",
    "expo-location": "~15.0.1",
    "expo-notifications": "~0.17.0",
    "expo-secure-store": "~12.0.0",
    "expo-splash-screen": "~0.17.5",
    "expo-updates": "^0.15.6",
    "i18next": "^22.4.8",
    "intl-pluralrules": "^1.3.1",
    "react": "18.1.0",
    "react-dom": "18.1.0",
    "react-i18next": "^12.1.4",
    "react-native": "0.70.6",
    "react-native-maps": "1.3.2",
    "react-native-pager-view": "6.0.1",
    "react-native-paper": "^5.1.2",
    "react-native-safe-area-context": "4.4.1",
    "react-native-screens": "~3.18.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@kavout/eslint-config": "workspace:*",
    "@types/react": "~18.0.14",
    "@types/react-native": "~0.70.6",
    "babel-preset-expo": "~9.2.1",
    "dotenv": "^16.0.3",
    "typescript": "^4.9.4"
  },
  "private": true,
  "expo": {
    "autolinking": {
      "nativeModulesDir": "../../packages/expo-system-theme"
    }
  }
}
