{
  "name": "@kavout/functions",
  "version": "0.0.0",
  "private": true,
  "author": "pchmn",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "build": "rm -rf ./dist && rollup -c rollup.config.js",
    "dev": "rm -rf ./dist && rollup -w -c rollup.config.js",
    "remove:local-dependencies": "pnpm remove @kavout/core && pnpm remove -D @kavout/tsconfig eslint-config-kavout-ts",
    "deploy": "pnpm remove:local-dependencies && firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@kavout/core": "workspace:*",
    "firebase-admin": "^11.3.0",
    "firebase-functions": "^4.2.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@firebase/functions-types": "^0.6.0",
    "@kavout/tsconfig": "workspace:*",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "eslint-config-kavout-ts": "workspace:*",
    "firebase-functions-test": "^0.2.0",
    "rollup": "^3.11.0",
    "rollup-plugin-rename-node-modules": "^1.3.1",
    "tsc-alias": "^1.8.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.9.4"
  }
}
