{
  "name": "@kuzpot/functions",
  "version": "0.0.0",
  "private": true,
  "author": "pchmn",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsup src/index.ts --target=node18 --minify --format=esm",
    "dev": "rm -rf ./dist &&  tsup src/index.ts --watch --target=node18 --format=esm",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "predeploy": "pnpm remove -D @kuzpot/core @kuzpot/tsconfig @kuzpot/eslint-config",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@logtail/node": "^0.4.0",
    "firebase-admin": "^11.3.0",
    "firebase-functions": "^4.4.1",
    "geofire-common": "^6.0.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@firebase/functions-types": "^0.6.0",
    "@kuzpot/core": "workspace:*",
    "@kuzpot/eslint-config": "workspace:*",
    "@kuzpot/tsconfig": "workspace:*",
    "@vitest/coverage-c8": "^0.28.4",
    "@vitest/ui": "^0.28.4",
    "dotenv": "^16.0.3",
    "firebase-functions-test": "^0.3.2",
    "tsup": "^7.1.0",
    "typescript": "^4.9.4",
    "vite": "^4.1.1",
    "vitest": "^0.28.4"
  }
}
