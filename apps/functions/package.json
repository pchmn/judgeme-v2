{
  "name": "@kavout/functions",
  "version": "0.0.0",
  "private": true,
  "author": "pchmn",
  "license": "MIT",
  "main": "dist/index.js",
  "type": "module",
  "engines": {
    "node": "16"
  },
  "scripts": {
    "build": "rm -rf ./dist && tsc",
    "build:watch": "rm -rf ./dist && tsc-watch --onSuccess \"tsc-alias\"",
    "build:rollup": "rm -rf ./dist && rollup -c rollup.config.js",
    "dev": "pnpm run build:watch | firebase emulators:start --only functions",
    "shell": "pnpm run build && firebase functions:shell",
    "start": "pnpm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@kavout/core": "workspace:*",
    "firebase-admin": "^11.3.0",
    "firebase-functions": "^4.2.0",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@firebase/functions-types": "^0.6.0",
    "@kavout/tsconfig": "workspace:*",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^11.0.0",
    "eslint-config-kavout-ts": "workspace:*",
    "firebase-functions-test": "^0.2.0",
    "rollup": "^3.11.0",
    "tsc-alias": "^1.8.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.9.4"
  }
}
