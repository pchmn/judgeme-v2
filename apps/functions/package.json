{
  "name": "@kavout/functions",
  "version": "0.0.0",
  "private": true,
  "author": "pchmn",
  "license": "MIT",
  "main": "dist/apps/functions/src/index.js",
  "scripts": {
    "build": "rm -rf ./dist && tsc && tsc-alias",
    "build:watch": "rm -rf ./dist && tsc-watch --onSuccess \"tsc-alias\"",
    "dev": "pnpm run build:watch | firebase emulators:start --only functions",
    "shell": "pnpm run build && firebase functions:shell",
    "start": "pnpm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "16"
  },
  "dependencies": {
    "firebase-admin": "^11.3.0",
    "firebase-functions": "^4.1.0"
  },
  "devDependencies": {
    "@kavout/tsconfig": "workspace:*",
    "eslint-config-kavout-ts": "workspace:*",
    "firebase-functions-test": "^0.2.0",
    "tsc-alias": "^1.8.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.9.4"
  }
}
