{
  "name": "@kuzpot/functions",
  "version": "0.0.0",
  "private": true,
  "author": "pchmn",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "build": "pnpm clean && esbuild src/fns/*/index.ts --bundle --minify --platform=node --target=node18 --outdir=dist --outbase=src/fns --sourcemap",
    "dev": "pnpm build --watch | sam local start-api -n env.json 2>&1 | tr \"\\r\" \"\\n\"",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "predeploy": "pnpm remove -D @kuzpot/core @kuzpot/tsconfig @kuzpot/eslint-config",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "@apollo/client": "^3.7.17",
    "@logtail/node": "^0.4.0",
    "@nhost/nhost-js": "^2.2.13",
    "firebase-admin": "^11.3.0",
    "firebase-functions": "^4.4.1",
    "geofire-common": "^6.0.0",
    "graphql": "^16.7.1",
    "jsonwebtoken": "^9.0.1",
    "zod": "^3.19.1"
  },
  "devDependencies": {
    "@firebase/functions-types": "^0.6.0",
    "@kuzpot/core": "workspace:*",
    "@kuzpot/eslint-config": "workspace:*",
    "@kuzpot/tsconfig": "workspace:*",
    "@types/aws-lambda": "^8.10.119",
    "@types/source-map-support": "^0.5.6",
    "@vitest/coverage-c8": "^0.28.4",
    "@vitest/ui": "^0.28.4",
    "dotenv": "^16.0.3",
    "esbuild": "^0.18.17",
    "firebase-functions-test": "^0.3.2",
    "tsup": "^7.1.0",
    "typescript": "^5.1.6",
    "vite": "^4.1.1",
    "vitest": "^0.28.4"
  }
}
